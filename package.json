{
  "name": "mittee",
  "version": "0.0.1",
  "description": "A super tiny event bus",
  "main": "dist/mittee.js",
  "module": "dist/mittee.es.js",
  "umd:main": "dist/mittee.umd.js",
  "esmodules": "dist/mittee.modern.js",
  "typings": "index.d.ts",
  "scripts": {
    "type-check": "tsc --noEmit",
    "lint": "eslint index.ts index.test.ts",
    "mocha": "mocha test",
    "bundle": "microbundle",
    "clean": "rimraf dist",
    "test": "npm-run-all --silent typecheck lint mocha test-types",
    "build": "npm-run-all --silent clean -p bundle -s docs",
    "release": "npm run -s build -s && npm t && git commit -am $npm_package_version && git tag $npm_package_version && git push && git push --tags && npm publish",
    "docs": "documentation readme index.ts --section APIs -q --parse-extension ts --markdown-toc false"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JarryChung/Mittee.git"
  },
  "keywords": [
    "emitter",
    "event-bus",
    "event"
  ],
  "author": "Jarry Chung",
  "license": "MIT",
  "files": [
    "dist",
    "index.ts",
    "index.d.ts"
  ],
  "bugs": {
    "url": "https://github.com/JarryChung/Mittee/issues"
  },
  "homepage": "https://github.com/JarryChung/Mittee#readme",
  "mocha": {
    "extension": [
      "ts"
    ],
    "require": [
      "ts-node/register",
      "esm"
    ],
    "spec": [
      "./*.test.ts"
    ]
  },
  "eslintConfig": {
    "extends": [
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "mocha": true,
      "jest": false,
      "es6": true
    },
    "globals": {
      "expect": true
    },
    "rules": {
      "semi": [
        2,
        "always"
      ],
      "jest/valid-expect": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/explicit-function-return-type": 0,
      "@typescript-eslint/explicit-module-boundary-types": 0,
      "@typescript-eslint/no-empty-function": 0
    }
  },
  "eslintIgnore": [
    "dist",
    "index.d.ts"
  ],
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/sinon": "^9.0.4",
    "@types/sinon-chai": "^3.2.4",
    "@typescript-eslint/eslint-plugin": "^3.0.1",
    "@typescript-eslint/parser": "^3.0.1",
    "chai": "^4.2.0",
    "documentation": "^13.0.0",
    "eslint": "^7.1.0",
    "esm": "^3.2.25",
    "microbundle": "^0.12.3",
    "mocha": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.5.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.3"
  }
}
